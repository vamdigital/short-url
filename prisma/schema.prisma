generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShortUrls {
  id                      Int @id @default(autoincrement())
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  originalUrl             String
  shortenedUrl            String
  user                    User @relation(fields: [userId], references: [id]) 
  userId                  String
}

model User {
  id                      String @id @default(cuid())
  email                   String @unique
  password                String
  firstName               String
  lastName                String
  avatarUrl               String?
  urls                    ShortUrls[]
}

